<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:background="@drawable/chat_bubble_receivers"
        android:layout_below="@id/chat_day"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_margin="2dp"
        >
        <TextView
            android:id="@+id/chat_sender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorekljjlkjlum"
            android:textSize="16sp"
            android:padding="7dp"
            android:layout_below="@id/chat_receiver_username"
            android:textColor="@android:color/black">
        </TextView>

        <TextView
            android:id="@+id/chat_hour"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="15:30 am"
            android:layout_toEndOf="@id/chat_receiver_username"
            android:layout_alignBaseline="@id/chat_receiver_username"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:lines="1"
            android:gravity="end"
            android:layout_alignWithParentIfMissing="true"
            android:forceHasOverlappingRendering="true"
            android:duplicateParentState="true">
        </TextView>

        <TextView
            android:id="@+id/chat_receiver_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:text="Pedro picapiedra"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black">
        </TextView>



    </RelativeLayout>

    <TextView
        android:id="@+id/chat_day"
        android:text="15 DE SEPTIEMBRE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        >
    </TextView>

</RelativeLayout>